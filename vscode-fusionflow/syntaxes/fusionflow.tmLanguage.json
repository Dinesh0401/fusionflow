{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "FusionFlow",
  "scopeName": "source.fusionflow",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.fusionflow",
          "match": "#.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.fusionflow",
          "match": "\\b(dataset|from|pipeline|end|where|join|on|derive|features|target|split|experiment|model|using|metrics|print|of|checkpoint|timeline|merge|into|undo|versioned)\\b"
        },
        {
          "name": "keyword.operator.logical.fusionflow",
          "match": "\\b(and|or|not)\\b"
        },
        {
          "name": "constant.language.fusionflow",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.fusionflow",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.fusionflow",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.fusionflow",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.fusionflow",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.fusionflow",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.fusionflow",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.arithmetic.fusionflow",
          "match": "\\+|\\-|\\*|\\/|%"
        },
        {
          "name": "keyword.operator.assignment.fusionflow",
          "match": "="
        }
      ]
    }
  }
}
